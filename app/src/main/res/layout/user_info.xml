<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/name_o"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:layout_marginTop="50dp"
        android:text="Name : "/>
    <TextView
        android:id="@+id/age_o"
        android:layout_below="@id/name_o"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Age :"/>


    <TextView
        android:id="@+id/location_text_o"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/age_o"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Location:"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <FrameLayout
        android:id="@+id/mapView_o"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/location_text_o"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="40dp"/>
    <Button
        android:id="@+id/call"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/mapView_o"
        android:text="Call"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>

</RelativeLayout>